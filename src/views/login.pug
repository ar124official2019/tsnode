doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Login

        style
            include ./tailwind.min.css
    body 
        form(class="p-4" method="post" action="/auth/login")
            if message
                .p-2.mb-2.bg-green-500 #{ message }

            div.p-2
                label Email
                input(class="p-2 block w-50 border border-lg" type="email" placeholder="Enter email" name="email")

            div.p-2
                label Password
                input(class="p-2 block w-50 border border-lg" type="password" placeholder="Enter password" name="password")

            if (error)
                div.p-2.mb-2.bg-red-500 #{ error }

            button(class="p-2 border-0 bg-blue-500") Login

            div
                a(href="/auth/signup") Signup instead
